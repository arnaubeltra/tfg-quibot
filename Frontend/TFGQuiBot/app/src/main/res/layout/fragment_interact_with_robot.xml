<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.interactWithRobot.InteractWithRobot">

    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="450dp"
        android:layout_height="636dp"
        android:alpha="0.1"
        android:background="@drawable/quibot_bg_light"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-45dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgController"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/arrows"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnForward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_arrow_up"
                app:layout_constraintEnd_toEndOf="@+id/imgController"
                app:layout_constraintStart_toStartOf="@+id/imgController"
                app:layout_constraintTop_toTopOf="@+id/imgController"
                tools:ignore="SpeakableTextPresentCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/ic_arrow_up"
                android:rotation="-90"
                app:layout_constraintBottom_toBottomOf="@+id/imgController"
                app:layout_constraintStart_toStartOf="@+id/imgController"
                app:layout_constraintTop_toTopOf="@+id/imgController"
                tools:ignore="SpeakableTextPresentCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/ic_arrow_up"
                android:rotation="90"
                app:layout_constraintBottom_toBottomOf="@+id/imgController"
                app:layout_constraintEnd_toEndOf="@+id/imgController"
                app:layout_constraintTop_toTopOf="@+id/imgController"
                tools:ignore="SpeakableTextPresentCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBackwards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ic_arrow_up"
                android:rotation="180"
                app:layout_constraintBottom_toBottomOf="@+id/imgController"
                app:layout_constraintEnd_toEndOf="@+id/imgController"
                app:layout_constraintStart_toStartOf="@+id/imgController"
                tools:ignore="SpeakableTextPresentCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSuck"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/icon_suck"
                app:layout_constraintBottom_toBottomOf="@+id/imgController"
                app:layout_constraintEnd_toEndOf="@+id/imgController"
                app:layout_constraintStart_toStartOf="@+id/imgController"
                app:layout_constraintTop_toTopOf="@+id/imgController"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="#CB4335"
                android:text="@string/txtReset"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnRaisePipette" />

            <Button
                android:id="@+id/btnReadColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#2E4053"
                android:text="@string/txtReadColor"
                app:layout_constraintEnd_toEndOf="@+id/btnReset"
                app:layout_constraintStart_toStartOf="@+id/btnReset"
                app:layout_constraintTop_toBottomOf="@+id/btnReset" />

            <Button
                android:id="@+id/btnRaisePipette"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:text="@string/txtRaisePipette"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgController" />

            <Button
                android:id="@+id/btnLowerPipette"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="32dp"
                android:text="@string/txtLowerPipette"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/imgController" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


